{% extends 'layout.jinja' %}

{% block app %}
    <h2 class="text-center">{{ room[0][1] }}</h2>
    <section class="top-controls">

        {% block top_controls %}
            <h1 class="visually-hidden">Media controls</h1>
            <form action="/kodi" method="POST" name="kodi-remote" id="kodi-remote" class="dark-box media-remote">
                <div class="media-remote__search">
                    <label class="search">Search:</label>
                    <input type="text" placeholder="Pulp Fiction, Sopranos, Alt-J" class="search__input">
                    <button class="search__button">
                        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 -3 20 20" xml:space="preserve" class="icon icon--small">
                            <path d="M16.8,16.2l-4.5-4.5c0.5-0.8,0.8-1.7,0.8-2.8c0-2.8-2.2-5-5-5s-5,2.2-5,5s2.2,5,5,5c1,0,2-0.3,2.8-0.8l4.5,4.5L16.8,16.2z
                                M8.2,11.9c-1.7,0-3-1.3-3-3s1.3-3,3-3s3,1.3,3,3S9.8,11.9,8.2,11.9z"/>
                        </svg>
                    </button>
                </div>
                <div class="media-remote__controls">
                    <button name="kodi_action" value="stop">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>stop</title>
                            <rect x="6" y="6" width="8" height="8"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="up">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>up</title>
                            <polygon points="10 9 14 14 16 12 10 6 4 12 6 14 10 9"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="playpause">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>playpause</title>
                            <rect class="a" x="3" y="7" width="2" height="7"/>
                            <rect class="a" x="7" y="7" width="2" height="7"/>
                            <polygon class="a" points="12 7 12 14 18 11 12 7"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="left">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>left</title>
                            <polygon points="9 10 14 6 12 4 6 10 12 16 14 14 9 10"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="select">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>enter</title>
                            <polygon class="a" points="17 6 15 6 15 10 9 10 9 7 3 11 9 15 9 12 17 12 17 6"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="right">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>right</title>
                            <polygon points="11 10 6 14 8 16 14 10 8 4 6 6 11 10"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="info">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>info</title>
                            <circle cx="10" cy="10" r="4"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="down">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <title>down</title>
                            <polygon points="10 11 6 6 4 8 10 14 16 8 14 6 10 11"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="back">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="icon">
                            <polygon points="16 10 9 10 9 7 3 11 9 15 9 12 16 12 16 10"/>
                        </svg>
                    </button>
                </div>
                <div class="media-remote__volume">
                    <button name="kodi_action" value="volume_up" class="volume-control">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 3 20 20" class="icon">
                            <title>plus</title>
                            <polygon points="15 9 11 9 11 5 9 5 9 9 5 9 5 11 9 11 9 15 11 15 11 11 15 11 15 9"/>
                        </svg>
                    </button>
                    <button name="kodi_action" value="volume_down" class="volume-control">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -3 20 20" class="icon">
                            <title>minus</title>
                            <rect x="5" y="11" width="10" height="2"/>
                        </svg>
                    </button>
                </div>
                <div class="media-remote__info">
                    <h2>Currently playing:</h2>
                    <div>{{ media.current_item }}</div>
                </div>
            </form>
        {% endblock %}

    </section>

    <ol class="tabs">
        <li class="tab {% if current == 'media' %}is-active{% endif %}"><a href="/room/{{ room[0][0] }}">Media</a></li>
        <li class="tab {% if current == 'lights' %}is-active{% endif %}"><a href="/room/{{ room[0][0] }}/lights">Lights</a></li>
    </ol>

    <section class="bottom-controls">

        {% block bottom_controls %}

            <div class="box">
                <div class="alarms">
                    <h2 class="text-center">Alarms</h2>
                    <div class="alarm">
                        <div>Weekdays</div>
                        <div>07:00</div>
                        <div class="day is-active">Mo</div>
                        <div class="day is-active">Tu</div>
                        <div class="day is-active">We</div>
                        <div class="day is-active">Th</div>
                        <div class="day is-active">Fr</div>
                        <div class="day">Sa</div>
                        <div class="day">Su</div>
                    </div>
                    <div class="alarm">
                        <div>Weekend</div>
                        <div>10:00</div>
                        <div class="day">Mo</div>
                        <div class="day">Tu</div>
                        <div class="day">We</div>
                        <div class="day">Th</div>
                        <div class="day">Fr</div>
                        <div class="day is-active">Sa</div>
                        <div class="day is-active">Su</div>
                    </div>
                </div>
            </div>

            <div class="box">
                <h2 class="text-center">Scenes</h2>

                {% include 'controls/scenes.jinja' %}

                {% include 'controls/scene.jinja' %}

            </div>
        {% endblock %}

    </section>
{% endblock %}